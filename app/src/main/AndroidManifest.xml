<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:name="com.example.mygithub.MyApplication"
        android:allowBackup="true"
        android:dataExtractionRules="@xml/data_extraction_rules"
        android:fullBackupContent="@xml/backup_rules"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.MyGitHub">
        <activity
            android:name="com.example.mygithub.view.activity.LoginActivity"
            android:exported="true"
            android:screenOrientation="user"
            android:theme="@style/Theme.MyGitHub">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />
                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.example.mygithub.view.activity.MainActivity"
            android:exported="true"
            android:screenOrientation="user"
            android:theme="@style/Theme.MyGitHub"/>
        <activity
            android:name="com.example.mygithub.view.activity.RepoContentActivity"
            android:exported="true"
            android:screenOrientation="user"
            android:theme="@style/Theme.MyGitHub"/>
        <activity
            android:name="com.example.mygithub.view.activity.SearchActivity"
            android:exported="true"
            android:screenOrientation="user"
            android:theme="@style/Theme.MyGitHub"/>
    </application>

</manifest>